# API Configuration
API_PREFIX=/api
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Database (optional - SQLite for MVP)
DATABASE_URL=sqlite:///./waterwatch.db

# External APIs
AIRNOW_API_KEY=your_airnow_key_here
NWS_USER_AGENT=WaterWatch-YourName-your.email@example.com

# Model Configuration
MODEL_PATH=backend/app/ml/artifacts/aqi_model.pkl
FEATURE_LIST_PATH=backend/app/ml/artifacts/feature_list.pkl
PREDICTION_THRESHOLD=0.40

# Data Collection
EPA_DATA_URL=https://www.epa.gov/outdoor-air-quality-data/download-daily-data
OPENAQ_API_URL=https://api.openaq.org/v2
NWS_API_URL=https://api.weather.gov

# Scheduler
ENABLE_SCHEDULER=true
UPDATE_TIME=16:00  # 4:00 PM daily update
